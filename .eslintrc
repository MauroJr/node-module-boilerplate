{
  "extends": ["airbnb-base"],
  "env": {
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "script"
  },
  "rules": {
    "strict": ["error", "global"],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ],
    "comma-dangle": 0,
    "consistent-return": 0,
    "prefer-arrow-callback": 0,
    "no-shadow": 0,
    "func-names": 0,
    "object-curly-newline": 0,
    "no-await-in-loop": 0,
    "no-restricted-syntax": 0,
    "prefer-destructuring": 0,
    "no-param-reassign": 0,
    "no-return-assign": 0,
    "no-underscore-dangle": 0,
    "no-continue": 0,
    "no-var": 0,
    "no-bitwise": 0
  }
}
